<div class="header_media">
  <div class="header-bg">
    <div class="header-video">
    {% comment %}
      <video src="{{ 'header-video.webm' | static_asset_url}}" autoplay="true" loop="true">
        <!-- <source type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"' /> -->
      </video>
    {% endcomment %}
    </div>
    <div class="header-inner">
      <h1 class="entry-tax header-index">
        {{'index.h1.header' | t }}
      </h1>
      <div class="adv-search-1">
        {% include 'filters/short-main-filter' %}
      </div>
    </div>
    <a class="scroll-btn"></a>
  </div>
</div>
{% include 'filters/short-main-filter-mobile' %}
<main class="container content_wrapper main-page" role="main">
   <div class="row">
