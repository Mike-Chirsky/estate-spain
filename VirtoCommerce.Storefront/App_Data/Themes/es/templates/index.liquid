                <a href="/andalusia">
                  <h3>АНДАЛУЗИЯ</h3>
                </a>
              </div>
          </div>
         </div>
      </div>
   </div>
   <div>
      <h2 class="text-center padding15" id="types">{{'index.type.header' | t}}</h2>
      <div>
         {{ 'index.type.text' | t }}
      </div>
      <div class="row city-tails ">
