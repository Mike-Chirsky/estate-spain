    </div>
    <div>
      <div class="margin-top-25 no-margin-top-mobile">
         <h2 class="text-center padding15">{{ 'index.last-news' | t }}</h2>
         {% assign related_category = "news" %}
         {% include 'blog/blog-related-category', related_category %}
      </div>
   </div>
   <div class="row">
      <h2 class="text-center padding15" id="price">{{'index.price.header' | t}}</h2>
      <div>
         <div class="col-md-6">
          {{ 'index.price.col1' | t }}
          {{ 'index.price.col2' | t }}
        </div>
         <div class="col-md-6">
           <div class="padding15-0">
             <img src="{{ 'ceny-index.jpg' | static_asset_url }}" alt="">
