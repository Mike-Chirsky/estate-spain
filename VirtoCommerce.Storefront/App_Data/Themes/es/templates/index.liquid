   <div>
      <div>
        <h2 class="text-center padding15-0 no-margin-top-mobile">{{ 'index.info.header' | t }}</h2>
        {% include 'market-block/market-block', market_id: 'main-blog', market_url: 'storefrontapi/market/blog', block_id: 'main-blog' %}
      </div>
      <h2 class="text-center">{{'index.hot-deal.header' | t}}</h2>
      <div>
         {{ 'index.hot-deal.text' | t }}
