<div class="row">
    {% include 'breadcrumb' %}
</div>
<div class="row rightmargin single_width_blog">
   <div class="meta-info">
      <div class="meta-element">{{ 'blog.publish-date' | t }} <time pubdate datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'month_day_year' }}</time></div>
   </div>
   <div class="single-content single-blog">
      {{ article.content }}
   </div>
</div>
<div class="row">
  <div class="vc_column-inner">
   <div class="wpb_wrapper">
      <div class="article_container bottom-post  blogs_wrapper ">
         <h2 class="shortcode_title">{{ 'blog.associated-posts' | t }}</h2>
         {% assign count_items = 0 %}
		 {% for item in blog.articles %}
        {% if item.url == article.url %}
          {% continue %}
        {% endif %}
        {% if countItems == 4 %}
          {% break %}
        {% endif %}
        {% assign count_items = count_items | plus: 1 %}
        <div class="col-md-3 shortcode-col  listing_wrapper blog2v">
            <div class="property_listing" data-link="{{ item.url | absolute_url }}" style="height: 470px;">
			  <div class="blog_unit_image"><img width="525" height="328" src="{{ item.image_url | absolute_url }}" class="lazyload img-responsive wp-post-image" alt=""></div>
			  <h4>
				 <a href="{{item.url | absolute_url}}">{{ item.title }}</a>
			  </h4>
			  <div class="blog_unit_meta">
					<time pubdate datetime="{{ item.published_at | date: '%Y-%m-%d' }}">{{ item.published_at | date: format: 'month_day_year' }}</time>
			  </div>
			  <div class="listing_details the_grid_view">
				 {{ item.description }}
			  </div>
			  <a class="read_more" href="{{item.url | absolute_url}}">{{'blog.read-more' | t  }}<i class="fa fa-angle-right"></i> </a>
		   </div>
         </div>
		 {% endfor %}
      </div>
   </div>
  </div>
</div>