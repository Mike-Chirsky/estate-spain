<div class="pagination-container clearfix">
  <ul class="pagination-custom">
    {% if paginate.previous %}
      <li><a onclick="loadListProducts('{{paginate.previous.url}}', true)" title="{{ paginate.previous.title }}">&larr;</a></li>
    {% endif %}
    {% for part in paginate.custom_parts %}
      {% if part.is_link %}
        <li>
          <a onclick="loadListProducts('{{part.url}}', true)" title="{{ part.title }}">{{ part.title }}</a>
        </li>
      {% else %}
      
        {% if part.title == paginate.current_page %}
          <li class="active"><span>{{ part.title }}</span></li>
        {% else %}
          <li class="more-page"><span>{{ part.title }}</span></li>
        {% endif %}
      {% endif %}
    {% endfor %}
    {% if paginate.next %}
      <li><a onclick="loadListProducts('{{paginate.next.url}}', true)" title="{{ paginate.next.title }}">&rarr;</a></li>
    {% endif %}
  </ul>
  <ul class="pagination-custom-mobile">
    {% if paginate.previous %}
      <li><a onclick="loadListProducts('{{paginate.previous.url}}', true)" title="{{ paginate.previous.title }}">&larr;</a></li>
    {% endif %}
    {% for part in paginate.custom_parts %}
      {% if part.title == paginate.current_page %}
        <li class="active"><span>{{ part.title }}</span></li>
      {% endif %}
    {% endfor %}
    {% if paginate.next %}
      <li><a onclick="loadListProducts('{{ paginate.next.url }}', true)" title="{{ paginate.next.title }}">&rarr;</a></li>
    {% endif %}
  </ul>
</div>
