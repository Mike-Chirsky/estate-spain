<div class="city-header">
   <h2>{{- collection.h2_tip -}}</h2>
   <div class="city-tails">
      {%- if collection.link_block_type1 or collection.link_block_type2 or collection.link_block_type3 -%}
      <div class="row">
        {%- if collection.link_block_type1 -%}
         <div class="col-md-{%-if collection.link_block_type1 and collection.link_block_type2 and collection.link_block_type3 -%}
         {{-'4'-}}
         {%- elseif collection.link_block_type2 == null or collection.link_block_type3 == null -%}
         {{-'6'-}}
         {%- else -%}
         {{-'12'-}}
         {%- endif -%}">
            <div class="block-inner" style="background-image: url({{collection.link_block_type1_image | img_url: 'thumb'}})">
               <div class="bottom">
                  {{- collection.link_block_type1 -}}
               </div>
            </div>
         </div>
         {%- endif -%}
         {%- if collection.link_block_type2 -%}
         <div class="col-md-{%-if collection.link_block_type1 and collection.link_block_type2 and collection.link_block_type3 -%}
         {{-'4'-}}
         {%- elseif collection.link_block_type1 == null or collection.link_block_type3 == null -%}
         {{-'6'-}}
         {%- else -%}
         {{-'12'-}}
         {%- endif -%}">
            <div class="block-inner" style="background-image: url({{collection.link_block_type2_image | img_url: 'thumb'}})">
               <div class="bottom">
                  {{- collection.link_block_type2 -}}
               </div>
            </div>
         </div>
         {%- endif -%}
         {%- if collection.link_block_type3 -%}
         <div class="col-md-{%-if collection.link_block_type1 and collection.link_block_type2 and collection.link_block_type3 -%}
         {{-'4'-}}
         {%- elseif collection.link_block_type1 == null or collection.link_block_type2 == null -%}
         {{-'6'-}}
         {%- else -%}
         {{-'12'-}}
         {%- endif -%}" >
            <div class="block-inner" style="background-image: url({{collection.link_block_type3_image | img_url: 'thumb'}})">
               <div class="bottom">
                  {{- collection.link_block_type3 -}}
               </div>
            </div>
         </div>
         {%- endif -%}
      </div>
      {%- endif -%}
      {%- if collection.link_block_left or collection.link_block_right -%}
      <div class="row">
         {%- if collection.link_block_left -%}
         <div class="col-md-{%- if collection.link_block_left and collection.link_block_right -%}
            {{-'8'-}}
            {%- else -%}
            {{-'12'-}}
            {%- endif -%}">
            <div class="block-inner" style="background-image: url({{collection.link_block_left_image}})">
               {{- collection.link_block_left -}}
            </div>
         </div>
         {%- endif -%}
         {%- if collection.link_block_right -%}
         <div class="col-md-{%- if collection.link_block_left and collection.link_block_right -%}
            {{-'4'-}}
            {%- else -%}
            {{-'12'-}}
            {%- endif -%}">
            <div class="block-inner center" style="background-image: url({{collection.link_block_right_image}})">
               {{- collection.link_block_right -}}
            </div>
         </div>
         {%- endif -%}
      </div>
      {%- endif -%}
   </div>
</div>