<div class="city-header">
   <h2>{{- meta_info_product.h2_tip -}}</h2>
   <div class="city-tails">
      {%- if meta_info_product.link_block_type1 or meta_info_product.link_block_type2 or meta_info_product.link_block_type3 -%}
      <div class="row">
        {%- if meta_info_product.link_block_type1 -%}
         <div class="col-md-{%-if meta_info_product.link_block_type1 and meta_info_product.link_block_type2 and meta_info_product.link_block_type3 -%}
         {{-'4'-}}
         {%- elseif meta_info_product.link_block_type2 == null or meta_info_product.link_block_type3 == null -%}
         {{-'6'-}}
         {%- else -%}
         {{-'12'-}}
         {%- endif -%}">
            <div class="block-inner" style="background-image: url({{meta_info_product.link_block_type1_image}})">
               <div class="bottom">
                  {{- meta_info_product.link_block_type1 -}}
               </div>
            </div>
         </div>
         {%- endif -%}
         {%- if meta_info_product.link_block_type2 -%}
         <div class="col-md-{%-if meta_info_product.link_block_type1 and meta_info_product.link_block_type2 and meta_info_product.link_block_type3 -%}
         {{-'4'-}}
         {%- elseif meta_info_product.link_block_type1 == null or meta_info_product.link_block_type3 == null -%}
         {{-'6'-}}
         {%- else -%}
         {{-'12'-}}
         {%- endif -%}">
            <div class="block-inner" style="background-image: url({{meta_info_product.link_block_type2_image}})">
               <div class="bottom">
                  {{- meta_info_product.link_block_type2 -}}
               </div>
            </div>
         </div>
         {%- endif -%}
         {%- if meta_info_product.link_block_type3 -%}
         <div class="col-md-{%-if meta_info_product.link_block_type1 and meta_info_product.link_block_type2 and meta_info_product.link_block_type3 -%}
         {{-'4'-}}
         {%- elseif meta_info_product.link_block_type1 == null or meta_info_product.link_block_type2 == null -%}
         {{-'6'-}}
         {%- else -%}
         {{-'12'-}}
         {%- endif -%}" >
            <div class="block-inner" style="background-image: url({{meta_info_product.link_block_type3_image}})">
               <div class="bottom">
                  {{- meta_info_product.link_block_type3 -}}
               </div>
            </div>
         </div>
         {%- endif -%}
      </div>
      {%- endif -%}
      {%- if meta_info_product.link_block_left or meta_info_product.link_block_right -%}
      <div class="row">
         {%- if meta_info_product.link_block_left -%}
         <div class="col-md-{%- if meta_info_product.link_block_left and meta_info_product.link_block_right -%}
            {{-'8'-}}
            {%- else -%}
            {{-'12'-}}
            {%- endif -%}">
            <div class="block-inner" style="background-image: url({{meta_info_product.link_block_left_image}})">
               {{- meta_info_product.link_block_left -}}
            </div>
         </div>
         {%- endif -%}
         {%- if meta_info_product.link_block_right -%}
         <div class="col-md-{%- if meta_info_product.link_block_left and meta_info_product.link_block_right -%}
            {{-'4'-}}
            {%- else -%}
            {{-'12'-}}
            {%- endif -%}">
            <div class="block-inner center" style="background-image: url({{meta_info_product.link_block_right_image}})">
               {{- meta_info_product.link_block_right -}}
            </div>
         </div>
         {%- endif -%}
      </div>
      {%- endif -%}
   </div>
</div>