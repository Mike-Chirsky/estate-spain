{%- for blog in blogs -%}
    {%- if blog.handle != 'listcutomarticleblog' -%}
        {%- continue -%}
    {%- endif -%}
    {%- for article in blog.articles -%}
    <div class="col-md-4 col-xs-6 col-sm-6 blog2v">
    <div class="property_listing" data-link="{{ article.url | absolute_url }}" style="height: 470px;">
        <div class="blog_unit_image"><img width="525" height="328" src="{{ article.image_url | absolute_url }}" class="lazyload img-responsive wp-post-image" alt=""></div>
        <h4>
            <a href="{{article.url | absolute_url}}">{{ article.title }}</a>
        </h4>
        <div class="blog_unit_meta">
                <time pubdate datetime="{{ article.published_at | date: '%Y-%m-%d' }}">{{ article.published_at | date: format: 'month_day_year' }}</time>
        </div>
        <div class="listing_details the_grid_view">
            {{ article.description }}
        </div>
        <a class="read_more" href="{{article.url | absolute_url}}">{{'blog.read-more' | t  }}<i class="fa fa-angle-right"></i> </a>
    </div>
    </div>
    {%- endfor -%}
{%- endfor -%}