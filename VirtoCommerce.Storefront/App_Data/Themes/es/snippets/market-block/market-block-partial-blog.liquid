{%- for blog in blogs -%}
    {%- if blog.handle != 'listcutomarticleblog' -%}
        {%- continue -%}
    {%- endif -%}
    {%- for article in blog.articles -%}
    <div class="col-md-4 col-xs-6 col-sm-6 blog2v">
    <div class="property_listing" data-link="{{ article.url | absolute_url }}" style="height: 470px;">
        <div class="blog_unit_image">
            <img class="img-responsive wp-post-image" style="background-image: url({{ article.image_url | img_url: 'thumb_blog' | absolute_url }}); background-size:cover; height:192px;visibility: visible;"/>
        </div>
        <h4>
            <a href="{{article.url | absolute_url}}">{{ article.title }}</a>
        </h4>
        <div class="blog_unit_meta">
            <time pubdate datetime="{{ article.published_at | date: '%d.%m.%Y' }}">{{ article.published_at | date: '%d.%m.%Y' }}</time>
        </div>
        <div class="listing_details the_grid_view">
            {{- article.description | strip_html | slice: 0, 237 | strip -}}
            {%- if article.description.size > 237 -%}
            ...
            {%- endif -%}
        </div>
        <a class="read_more" href="{{article.url | absolute_url}}">{{'blog.read-more' | t  }}<i class="fa fa-angle-right"></i> </a>
    </div>
    </div>
    {%- endfor -%}
{%- endfor -%}