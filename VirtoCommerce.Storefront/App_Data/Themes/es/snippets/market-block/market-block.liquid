<div id="marketblock-{{ block_id }}" class="no-display-mobile custom-slider row">
    <div class="navigation row">
        <div class="controls">
            <button class="prev"><i class="fa fa-chevron-left"></i></button>
            <button class="next"><i class="fa fa-chevron-right"></i></button>
        </div>
    </div>
    <div class="spinner" style="display: none;">
        <div class="rect1"></div>
        <div class="rect2"></div>
        <div class="rect3"></div>
        <div class="rect4"></div>
        <div class="rect5"></div>
    </div>
    <div class="market-block-content">
    </div>
</div>
<div id="marketblock-{{ block_id }}-mobile" class="display-mobile custom-slider-mobile padding0-15 row">
    <div class="market-block-content row">
    </div>
    <div class="spinner" style="display: none;">
        <div class="rect1"></div>
        <div class="rect2"></div>
        <div class="rect3"></div>
        <div class="rect4"></div>
        <div class="rect5"></div>
    </div>
    <div class="more-button">
        <button class="wpresidence_button btn-std margin-auto">еще</button>
    </div>
</div>
<script type="text/javascript">
  setTimeout(function(){
    if(!createSliders{{ block_id | replace: '-','_' }}())
    {
        setTimeout(function(){createSliders{{ block_id | replace: '-','_' }}()}, 100);
    }
  }, 100);

  function createSliders{{ block_id | replace: '-','_' }}()  {
    if (typeof createCustomSlider !== "undefined") {
        createCustomSlider("#marketblock-{{ block_id }}", "{{ market_id}}", "{{ market_url}}");
        createCustomSliderMobile("#marketblock-{{ block_id }}-mobile", "{{ market_id}}", "{{ market_url}}");
        return true;
    }
    return false;
  }

</script>