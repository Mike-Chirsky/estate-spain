<div class="region-footer">
   <div>
     {%- if meta_info_product.link_block_left or meta_info_product.link_block_right -%}
     {%- if meta_info_product.link_block_left -%}
        <div class="col-md-{%-if meta_info_product.link_block_left and meta_info_product.link_block_right-%}8{%-else-%}12{%-endif-%}">
           <div class="block-inner" style="background-image: url({{-meta_info_product.link_block_left_image-}})">
              {{- meta_info_product.link_block_left -}}
           </div>
        </div>
        {%- endif -%}
        {%- if meta_info_product.link_block_right -%}
        <div class="col-md-{%-if meta_info_product.link_block_left and meta_info_product.link_block_right-%}4{%-else-%}12{%-endif-%}">
           <div class="block-inner center" style="background-image: url({{-meta_info_product.link_block_right_image-}})">
              {{- meta_info_product.link_block_right -}}
           </div>
        </div>
        {%- endif -%}
     {%- endif -%}
   </div>
   <div>
     {%- if meta_info_product.link_block_centr or meta_info_product.link_block_centr1 -%}
     <div class="col-md-12">
         <div class="block-inner" style="background-image: url({{-meta_info_product.link_block_centr_image-}})">
            {%- if meta_info_product.link_block_centr and meta_info_product.link_block_centr1 -%}
            <div class="col-md-6">
                {{- meta_info_product.link_block_centr -}}
            </div>
            <div class="col-md-6">
                {{- meta_info_product.link_block_centr1 -}}
            </div>
            {%- elseif meta_info_product.link_block_centr -%}
                {{- meta_info_product.link_block_centr -}}
            {%- else -%}
                {{- meta_info_product.link_block_centr1 -}}
            {%- endif -%}
         </div>
      </div>
     {%- endif -%}
   </div>
</div>