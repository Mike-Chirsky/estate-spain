<div class="row contact-us-footer">
   {% if product == null %}
   <div class="col-md-3">
      {% include 'contact' %}
   </div>
   {% endif %}
   {% if product == null %}
   <div class="col-md-9">
   {% else %}
   <div class="col-md-12" >
   {% endif %}
      <div class="spinner" id="contact-us-form-spinner" style="display: none;">
            <div class="rect1"></div>
            <div class="rect2"></div>
            <div class="rect3"></div>
            <div class="rect4"></div>
            <div class="rect5"></div>
        </div>
        <div id="contact-us-form-succes" class="text-center" style="display: none">    
            <i class="fa fa-check" aria-hidden="true"></i> {{'callback-form.succes' | t}}
        </div>
        <div id="contact-us-form-fail" class="text-center" style="display: none">    
            <i class="fa fa-times" aria-hidden="true"></i> {{'callback-form.fail' | t}}
        </div>
      <div id="contact-us-form">
        {% if template contains 'product' %}
          <h4 class="text-center">{{ 'request-form.header2' | t }}</h4>
        {% else %}
          <h4 class="text-center">{{ 'request-form.header3' | t }}</h4>
        {% endif %}
        <div class="row">
         <div class="col-md-4">
            <input type="text" data-property="userName"  placeholder="{{ 'request-form.name' | t }}" aria-required="true" class="form-control">
         </div>
         <div class="col-md-4">
            <input type="text" data-property="userPhone" placeholder="{{ 'request-form.phone' | t }}" class="form-control">
         </div>
         <div class="col-md-4">
            <input type="email" data-property="userEmail" aria-required="true" placeholder="{{ 'request-form.mail' | t }}" class="form-control" required>
         </div>
         {% if product %}
            <input type="hidden" data-property="objectName" value="{%- include 'product_name' -%}" />
            <input type="hidden" data-property="formType" value="3" />
        {% else %}
            <input type="hidden" data-property="formType" value="4" />
        {% endif %}
      </div>
      <div class="row">
         <div class="col-md-12">
            <textarea cols="45" rows="6" data-property="userMessage" aria-required="true" class="form-control">{%- if template contains 'product' -%}{{- 'request-form.message-object' | t : name: product.custom_title -}}{%- else -%}{{- 'request-form.message' | t -}}{%- endif -%}</textarea>
         </div>
      </div>
      <div class="row">
        <div class="col-md-12">
            <div class="row">
                <div class="col-md-8">
                    <span class="license light-text"> <a href="/user-privace">{{ 'request-form.license' | t }}</a> </span>
                </div>
                <div class="col-md-4">
                    <button class="wpresidence_button form-control btn-std margin-auto" id="request-form-submit" >{{ 'request-form.send' | t }}</button>
                </div>
            </div>
         </div>
        </div>
      </div>
   </div>
</div>