{% for article in blog.articles %}
    {% if article.category != category_type %}
        {% continue %}
    {% endif %}
    <div class="handbook-list-article blog2v">
        <h4><a href="{{article.url | absolute_url }}">{{ article.title }}</a></h4>
        <div> {{- article.description | strip_html | slice: 0, 237 | strip -}}
        {%- if article.description.size > 237 -%}
           ... <a href="{{article.url | absolute_url}}">[{{ 'blog.read-more' | t }}]</a>
        {%- endif -%} </div>
        <div>
            <a class="read_more" href="{{article.url | absolute_url}}">{{'blog.read-more' | t  }}<i class="fa fa-angle-right"></i></a>
        </div>
    </div>
{% endfor %}