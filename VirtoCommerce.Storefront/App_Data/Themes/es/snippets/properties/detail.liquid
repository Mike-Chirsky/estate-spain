{%- for property in product.properties -%}
    {%- if property.name == 'other_type' -%}
        {% assign other_type = property.value %}
    {%- endif -%}
    {%- if property.name == 'propertysquare' -%}
        {% assign propertysquare = property.value %}
    {%- endif -%}
    {%- if property.name == 'landsquare' -%}
        {% assign landsquare = property.value %}
    {%- endif -%}
    {%- if property.name == 'seaview' -%}
         {% assign seaview = property.value %}
    {%- endif -%}
    {%- if property.name == 'distancetosea' -%}
        {% assign distancetosea = property.value %}
    {%- endif -%}
    {%- if property.name == 'distanceairport' -%}
        {% assign distanceairport = property.value %}
    {%- endif -%}
    {%- if property.name == 'bath' -%}
        {% assign bath = property.value %}
    {%- endif -%}
    {%- if property.name == 'rooms' -%}
        {% assign rooms = property.value %}
    {%- endif -%}
     {%- if property.name == 'bedrooms' -%}
        {% assign bedrooms = property.value %}
    {%- endif -%}
    {%- if property.name == 'condition' -%}
        {% assign condition = property.value %}
    {%- endif -%}
{%- endfor -%}

{%- if other_type -%}
    <div class="listing_detail col-md-4"><span class="bold">{{ 'product.other_type' | t }}:</span> {{ other_type | capitalize }}</div>
{%- endif -%}
{%- if propertysquare -%}
    <div class="listing_detail col-md-4"><span class="bold">{{ 'product.propertysquare' | t }}:</span> {{ product.property_square  }} {{ 'product.square' | t }}</div>
{%- endif -%}
{%- if landsquare -%}
    <div class="listing_detail col-md-4"><span class="bold">{{ 'product.landsquare' | t }}:</span> {{ product.land_square }} {{ 'product.square' | t }}</div>
{%- endif -%}
{%- if seaview -%}
    <div class="listing_detail col-md-4"><span class="bold">{{ 'product.seaview' | t }}:</span> {{ seaview | t | capitalize }} </div>
{%- endif -%}
{%- if distancetosea -%}
    <div class="listing_detail col-md-4"><span class="bold">{{ 'product.distancetosea' | t }}:</span> {{ distancetosea | capitalize | replace: ".00", "" }} {{ 'product.m' | t }}</div>
{%- endif -%}
{%- if distanceairport -%}
    <div class="listing_detail col-md-4"><span class="bold">{{ 'product.distanceairport' | t }}:</span> {{ distanceairport | capitalize | replace: ".00", "" }} {{ 'product.km' | t }}</div>
{%- endif -%}
{%- if bath -%}
    <div class="listing_detail col-md-4"><span class="bold">{{ 'product.bath' | t }}:</span> {{ bath | capitalize }}</div>
{%- endif -%}
{%- if rooms -%}
    <div class="listing_detail col-md-4"><span class="bold">{{ 'product.rooms' | t }}:</span> {{ rooms | capitalize }}</div>
{%- endif -%}
{%- if bedrooms -%}
    <div class="listing_detail col-md-4"><span class="bold">{{ 'product.bedrooms' | t }}:</span> {{ bedrooms | capitalize }}</div>
{%- endif -%}
{%- if condition -%}
    <div class="listing_detail col-md-4"><span class="bold">{{ 'product.condition' | t }}:</span> {{ condition | capitalize }}</div>
{%- endif -%}